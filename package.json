{
  "name": "homebridge-yeelighter",
  "version": "1.0.4",
  "description": "Yeelight support for Homebridge: https://github.com/nfarina/homebridge",
  "license": "MIT",
  "keywords": [
    "homebridge-plugin"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/cellcortex/homebridge-yeelighter.git"
  },
  "bugs": {
    "url": "http://github.com/cellcortex/homebridge-yeelighter/issues"
  },
  "engines": {
    "node": ">=10.0.0",
    "homebridge": ">=0.2.0"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "tsc --noEmit && lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint src/*.ts --fix",
      "git add"
    ]
  },
  "dependencies": {
    "http-headers": "^3.0.2"
  },
  "devDependencies": {
    "@types/debug": "^4.1.5",
    "@types/events": "^3.0.0",
    "@types/node": "^12.12.7",
    "@typescript-eslint/eslint-plugin": "^2.6.1",
    "@typescript-eslint/parser": "^2.6.1",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-eslint-comments": "^3.1.2",
    "eslint-plugin-jest": "^23.0.3",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-unicorn": "^13.0.0",
    "hap-nodejs": "^0.5.3",
    "homebridge": "^0.4.50",
    "husky": "^3.0.9",
    "lint-staged": "^9.4.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.0",
    "ts-loader": "^6.2.1",
    "tslib": "^1.10.0",
    "typescript": "^3.7.4",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10"
  },
  "scripts": {
    "_clear": "rimraf dist/*",
    "_tsc": "tsc",
    "build": "run-s _clear _tsc",
    "watch": "tsc --watch",
    "prepublishOnly": "npm run build",
    "lint": "tsc --noEmit && eslint 'src/*.ts'",
    "webpack": "webpack",
    "debug": "DEBUG=* /usr/local/bin/homebridge -D -P ../homebridge-yeelighter"
  }
}
