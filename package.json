{
  "name": "homebridge-yeelighter",
  "version": "1.5.15",
  "description": "Yeelight support for Homebridge with particular support of ceiling lights",
  "license": "MIT",
  "keywords": [
    "homebridge-plugin",
    "ceiling",
    "yeelight",
    "xiaomi",
    "homekit",
    "night_mode",
    "Bedside Lamp",
    "Ceiling Light",
    "Moonlight",
    "Jiaoyue",
    "YLXD42YL",
    "YLXD50YL",
    "YLXD01YL",
    "GuangCan",
    "Galaxy"
  ],
  "author": "Thomas Kroeber",
  "repository": {
    "type": "git",
    "url": "git://github.com/cellcortex/homebridge-yeelighter.git"
  },
  "bugs": {
    "url": "http://github.com/cellcortex/homebridge-yeelighter/issues"
  },
  "engines": {
    "node": ">=10.0.0",
    "homebridge": ">=0.2.0"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "config.schema.json"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "tsc --noEmit && lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint src/*.ts --fix"
    ]
  },
  "dependencies": {
    "http-headers": "^3.0.2"
  },
  "devDependencies": {
    "@types/debug": "^4.1.5",
    "@types/events": "^3.0.0",
    "@types/node": "^13.9.2",
    "@typescript-eslint/eslint-plugin": "^2.6.1",
    "@typescript-eslint/parser": "^2.6.1",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-eslint-comments": "^3.1.2",
    "eslint-plugin-jest": "^23.0.3",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-unicorn": "^17.2.0",
    "hap-nodejs": "^0.5.3",
    "homebridge": "^0.4.50",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.8",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.1",
    "rimraf": "^3.0.0",
    "standard-changelog": "^2.0.21",
    "standard-version": "^8.0.1",
    "ts-loader": "^6.2.1",
    "tslib": "^1.10.0",
    "typescript": "^3.7.4",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10"
  },
  "scripts": {
    "_clear": "rimraf dist/*",
    "_tsc": "tsc",
    "build": "run-s _clear _tsc",
    "watch": "tsc --watch",
    "prepublishOnly": "npm run build",
    "lint": "tsc --noEmit && eslint 'src/*.ts'",
    "debug": "DEBUG=* /usr/local/bin/homebridge -D -P ../homebridge-yeelighter",
    "postversion": "git push --tags && yarn publish . --tag $npm_package_version && git push && echo \"Successfully released version $npm_package_version!\"",
    "release-commit": "standard-version -a",
    "release": "standard-version -r minor && git push --follow-tags origin master && yarn publish --non-interactive",
    "release-patch": "standard-version -r patch && git push --follow-tags origin master && yarn publish --non-interactive"
  }
}
